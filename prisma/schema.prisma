generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Guild {
  id         Int       @id @default(autoincrement())
  guildId    String    @unique @map("guild_id") @db.VarChar(70)
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
  config     Config?

  @@map("guild")
}

model Config {
  id                        Int      @id @default(autoincrement())
  guildId                   String   @unique
  prefix                    String?  @db.VarChar(5)
  language                  String?  @db.VarChar(5)
  premium                   Boolean?
  levelUpChannelId          String?  @map("lvl_up_chnl_id")
  dailyLeaderboardChannelId String?  @map("daily_lead_chnl_id")
  guild                     Guild    @relation(fields: [guildId], references: [guildId])
  exp                       EXP?

  @@map("config")
}

model EXP {
  id                       Int                 @id @default(autoincrement())
  configId                 Int                 @unique
  TextExperienceMin        Int                 @default(5) @map("txt_exp_min")
  TextExperienceMax        Int                 @default(50) @map("txt_exp_max")
  isTextExperienceEnabled  Boolean             @default(false) @map("txt_enabled")
  TextExperienceCooldown   Int                 @default(60) @map("txt_exp_cd")
  VoiceExperienceMin       Int                 @default(5) @map("vc_exp_min")
  VoiceExperienceMax       Int                 @default(50) @map("vc_exp_max")
  isVoiceExperienceEnabled Boolean             @default(false) @map("vc_enabled")
  VoiceExperienceCooldown  Int                 @default(60) @map("vc_exp_cd")
  config                   Config              @relation(fields: [configId], references: [id])
  EXPChannelFilters        EXPChannelFilters[]

  @@map("exp")
}

model EXPChannelFilters {
  id        Int     @id @default(autoincrement())
  EXPId     Int     @map("exp_id")
  channelId String  @map("channel_id")
  text      Boolean @map("text_disabled")
  voice     Boolean @map("voice_disabled")
  exp       EXP     @relation(fields: [EXPId], references: [id])

  @@map("expChannelFilters")
}
